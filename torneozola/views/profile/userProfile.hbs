    <div class="span3 well">
        <center>
        <a href="#aboutModal" data-toggle="modal" data-target="#myModal"><img src="{{user.profilePhoto}}" name="aboutme" width="140" height="140" class="img-circle"></a>
        <h3>{{ user.username }}</h3>
        <em>Click my face for more</em>
		</center>
