{{#if user}} 


{{#each articles}} {{#if this.img}}
<section class="NEWS">
  <div data-aos="zoom-in">
    <div class="breakingNews">
      <div class="card mb-3">
        <a  href="{{link}}" target="_blank"><img class="card-img-top" src="{{this.img}}" width="100px" height="400px" alt="imgURL"></a>
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">
            <small class="text-muted"></small>
          </p>
        </div>
        <button class="button-save-news art-links" value="{{this._id}}">Save News</button>
      </div>
    </div>
</section>

{{/if}} {{/each}} {{else}}
